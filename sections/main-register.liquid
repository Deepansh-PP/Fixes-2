{% comment %}
  Main Register Section
  Myntra-style registration page
{% endcomment %}

<div class="crimson-accounts">
  <div class="login-container">
    <!-- Header with Logo -->
    <div class="login-header">
      <div class="login-logo">
        <div class="login-logo-icon">
          <span>A</span>
        </div>
        <div class="login-logo-text">CRIMSON ARTISAN</div>
        <div class="login-tagline">Join Our Artisan Community</div>
      </div>
    </div>

    <!-- Register Card -->
    <div class="login-card">
      <h1 class="login-title">Create Account</h1>
      <p class="login-subtitle">Sign up to discover handcrafted treasures</p>
{% comment %}
      <!-- Google Sign Up Button -->
      <button type="button" class="google-signin-btn" onclick="handleGoogleSignIn()">
        <svg viewBox="0 0 24 24">
          <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
          <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
          <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
          <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
        </svg>
        Continue with Google
      </button>
 {% endcomment %}

      <!-- Divider -->
      <div class="login-divider">
        <div class="login-divider-line"></div>
        <span class="login-divider-text">or</span>
        <div class="login-divider-line"></div>
      </div>

      <!-- Registration Form -->
      {%- form 'create_customer', class: 'login-form' -%}
        {%- if form.errors -%}
          <div class="form-error-message">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"/>
              <line x1="12" y1="8" x2="12" y2="12"/>
              <line x1="12" y1="16" x2="12.01" y2="16"/>
            </svg>
            <span>{{ form.errors | default_errors }}</span>
          </div>
        {%- endif -%}

        <div class="form-row" style="display: grid; grid-template-columns: 1fr 1fr; gap: 12px;">
          <div class="form-group">
            <label for="FirstName" class="form-label">First Name</label>
            <input
              type="text"
              name="customer[first_name]"
              id="FirstName"
              class="form-input"
              placeholder="First name"
              autocomplete="given-name"
              required
            >
          </div>

          <div class="form-group">
            <label for="LastName" class="form-label">Last Name</label>
            <input
              type="text"
              name="customer[last_name]"
              id="LastName"
              class="form-input"
              placeholder="Last name"
              autocomplete="family-name"
              required
            >
          </div>
        </div>

        <div class="form-group">
          <label for="Email" class="form-label">Email Address</label>
          <input
            type="email"
            name="customer[email]"
            id="Email"
            class="form-input {% if form.errors contains 'email' %}error{% endif %}"
            placeholder="Enter your email"
            autocomplete="email"
            autocapitalize="off"
            required
          >
        </div>

        <div class="form-group" style="position: relative;">
          <label for="CreatePassword" class="form-label">Password</label>
          <input
            type="password"
            name="customer[password]"
            id="CreatePassword"
            class="form-input"
            placeholder="Create a password"
            autocomplete="new-password"
            minlength="6"
            required
          >
          <button type="button" class="password-toggle" onclick="togglePassword('CreatePassword')" style="position: absolute; right: 16px; bottom: 16px;">
            <svg class="eye-open" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
              <circle cx="12" cy="12" r="3"/>
            </svg>
          </button>
        </div>

        <div class="form-group" style="display: flex; align-items: flex-start; gap: 12px;">
          <input type="checkbox" id="terms" required style="width: 20px; height: 20px; margin-top: 2px; accent-color: #A91D1D;">
          <label for="terms" style="font-size: 13px; color: #666; line-height: 1.4;">
            I agree to the <a href="/pages/terms" style="color: #A91D1D;">Terms of Service</a> and <a href="/pages/privacy-policy" style="color: #A91D1D;">Privacy Policy</a>
          </label>
        </div>

        <button type="submit" class="login-submit-btn">
          Create Account
        </button>
      {%- endform -%}

      <!-- Login Prompt -->
      <div class="register-prompt">
        <p>Already have an account? <a href="{{ routes.account_login_url }}">Sign In</a></p>
      </div>
    </div>
  </div>
</div>

<style>
  .form-error-message {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 12px 16px;
    background: rgba(220, 53, 69, 0.1);
    border: 1px solid rgba(220, 53, 69, 0.2);
    border-radius: 12px;
    color: #dc3545;
    font-size: 14px;
  }
</style>

<script>
  function togglePassword(inputId) {
    const input = document.getElementById(inputId);
    input.type = input.type === 'password' ? 'text' : 'password';
  }

  function handleGoogleSignIn() {
    window.location.href = '{{ routes.account_login_url }}';
  }
</script>

{% schema %}
{
  "name": "Register Page",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Create Account"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Sign up to discover handcrafted treasures"
    }
  ]
}
{% endschema %}
