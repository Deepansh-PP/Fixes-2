{% schema %}
{
  "name": "The Gifting Corner",
  "settings": [
    { "type": "text", "id": "title", "label": "Heading", "default": "The Gifting Corner" },
    { "type": "text", "id": "subtitle", "label": "Subtitle", "default": "Thoughtful presents for every budget" }
  ],
  "blocks": [
    {
      "type": "gift_block",
      "name": "Price Point",
      "limit": 4,
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Background Image" },
        { "type": "text", "id": "title", "label": "Heading", "default": "Under â‚¹999" },
        { "type": "text", "id": "sub", "label": "Sub-text", "default": "Housewarming" },
        { "type": "url", "id": "link", "label": "Link" }
      ]
    }
  ],
  "presets": [{ "name": "The Gifting Corner" }]
}
{% endschema %}

<section class="gifting-section">
  <div class="gifting-header">
    <h2 class="gifting-title">{{ section.settings.title }}</h2>
    <p class="gifting-subtitle">{{ section.settings.subtitle }}</p>
  </div>

  <div class="gifting-grid">
    {% for block in section.blocks %}
      <a href="{{ block.settings.link }}" class="gift-card" {{ block.shopify_attributes }}>
        <div class="gift-img-wrap">
          {% if block.settings.image %}
            <img src="{{ block.settings.image | image_url: width: 600 }}" alt="{{ block.settings.title }}" loading="lazy">
          {% else %}
            <div style="width:100%; height:100%; background:#f0f0f0;"></div>
          {% endif %}
          <div class="gift-overlay"></div>
          <div class="gift-content">
            <span class="gift-sub">{{ block.settings.sub }}</span>
            <h3 class="gift-price">{{ block.settings.title }}</h3>
          </div>
        </div>
      </a>
    {% endfor %}
  </div>
</section>

<style>
.gifting-section { padding: 40px 16px; background: #fffdf5; /* Very subtle gold tint */ border-top: 1px solid #f0f0f0; }
.gifting-header { text-align: center; margin-bottom: 24px; }
.gifting-title { font-family: 'Playfair Display', serif; font-size: 26px; color: #880015; margin: 0 0 4px; font-weight: 700; }
.gifting-subtitle { font-size: 14px; color: #666; margin: 0; }

.gifting-grid { display: grid; grid-template-columns: repeat(2, 1fr); gap: 12px; max-width: 1200px; margin: 0 auto; }

.gift-card { text-decoration: none; border-radius: 12px; overflow: hidden; display: block; position: relative; transition: transform 0.3s; box-shadow: 0 4px 10px rgba(0,0,0,0.05); }
.gift-card:hover { transform: translateY(-5px); box-shadow: 0 8px 20px rgba(136,0,21,0.15); }

.gift-img-wrap { position: relative; aspect-ratio: 4/5; width: 100%; height: 100%; overflow: hidden; }
.gift-img-wrap img { width: 100%; height: 100%; object-fit: cover; transition: transform 0.5s ease; }
.gift-card:hover img { transform: scale(1.08); }

.gift-overlay { position: absolute; inset: 0; background: linear-gradient(to top, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0.2) 60%, transparent 100%); }

.gift-content { position: absolute; bottom: 16px; left: 16px; right: 16px; text-align: center; color: white; border: 1px solid rgba(255,255,255,0.3); padding: 12px; border-radius: 8px; backdrop-filter: blur(2px); }
.gift-sub { font-size: 10px; text-transform: uppercase; letter-spacing: 1px; font-weight: 600; opacity: 0.9; display: block; margin-bottom: 4px; color: #D4AF37; }
.gift-price { font-family: 'Playfair Display', serif; font-size: 18px; margin: 0; font-weight: 700; }

@media (min-width: 768px) {
  .gifting-section { padding: 60px 40px; }
  .gifting-title { font-size: 36px; }
  .gifting-grid { grid-template-columns: repeat(4, 1fr); gap: 20px; }
  .gift-content { bottom: 20px; left: 20px; right: 20px; padding: 16px; }
  .gift-price { font-size: 24px; }
}
</style>