<script>
function checkExpressDelivery() {
  const pincode = document.getElementById('express-pincode').value;
  const statusEl = document.getElementById('delivery-status');
  
  // Sample available pincodes
  const availablePincodes = ['110001', '110002', '110003', '400001', '400002', '560001', '560002'];
  
  if (pincode.length !== 6) {
    statusEl.className = 'delivery-status unavailable';
    statusEl.textContent = 'Please enter a valid 6-digit pincode';
    return;
  }
  
  if (availablePincodes.includes(pincode)) {
    statusEl.className = 'delivery-status available';
    statusEl.innerHTML = '✓ Express delivery available! Get it within <strong>30 minutes</strong>';
  } else {
    statusEl.className = 'delivery-status unavailable';
    statusEl.textContent = '✕ Sorry, express delivery is not available in your area yet.';
  }
}

// Countdown timer
function startExpressCountdown() {
  let minutes = 15;
  let seconds = 0;
  
  setInterval(() => {
    if (seconds === 0) {
      if (minutes === 0) {
        minutes = 15;
      } else {
        minutes--;
      }
      seconds = 59;
    } else {
      seconds--;
    }
    
    const countdownEl = document.getElementById('express-countdown');
    if (countdownEl) {
