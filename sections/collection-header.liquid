{%- comment -%}
  AONA INDIA - Collection Header Section
  Simple header with collection title and optional image
{%- endcomment -%}

<div class="collection-header bg-white px-4 py-4" style="padding-top: calc(56px + 16px);">
  {%- if collection.image -%}
    <div class="collection-image mb-4" style="border-radius: 8px; overflow: hidden;">
      <img 
        src="{{ collection.image | image_url: width: 800 }}"
        alt="{{ collection.title }}"
        style="width: 100%; height: 150px; object-fit: cover;"
        loading="eager"
      >
    </div>
  {%- endif -%}
  
  <h1 class="font-heading text-xl font-semibold text-primary">
    {{ collection.title }}
  </h1>
  
  {%- if collection.description != blank -%}
    <p class="text-sm text-secondary mt-2">
      {{ collection.description | strip_html | truncate: 150 }}
    </p>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Collection Header",
  "tag": "section",
  "class": "section-collection-header",
  "settings": []
}
{% endschema %}
