{%- comment -%}
  AONA - Image with Text
  Standard split layout for storytelling
{%- endcomment -%}

<style>
  .image-with-text {
    display: flex;
    flex-direction: column;
    background: white;
  }

  .iwt-image-container {
    width: 100%;
    position: relative;
  }

  .iwt-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .iwt-content {
    padding: 40px 24px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
  }

  .iwt-subtitle {
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: var(--color-gold, #D4AF37);
    margin-bottom: 12px;
    font-weight: 600;
  }

  .iwt-title {
    font-family: 'Playfair Display', serif;
    font-size: 28px;
    line-height: 1.2;
    margin-bottom: 20px;
    color: var(--color-royal-red, #880015);
  }

  .iwt-text {
    line-height: 1.6;
    color: var(--color-text-secondary, #666);
    margin-bottom: 24px;
  }

  .iwt-btn {
    display: inline-block;
    padding: 12px 32px;
    background: transparent;
    color: var(--color-royal-red, #880015);
    border: 1px solid var(--color-royal-red, #880015);
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s;
    text-transform: uppercase;
    font-size: 12px;
    letter-spacing: 1px;
  }

  .iwt-btn:hover {
    background: var(--color-royal-red, #880015);
    color: white;
  }

  /* Desktop Layout */
  @media (min-width: 768px) {
    .image-with-text {
      flex-direction: row;
      align-items: stretch;
      min-height: 500px;
    }

    .image-with-text.reversed {
      flex-direction: row-reverse;
    }

    .iwt-image-container {
      width: 50%;
    }

    .iwt-content {
      width: 50%;
      padding: 60px;
    }
  }
</style>

<div class="image-with-text {% if section.settings.layout == 'right' %}reversed{% endif %}">
  <div class="iwt-image-container">
    {%- if section.settings.image != blank -%}
      <img
        src="{{ section.settings.image | image_url: width: 800 }}"
        alt="{{ section.settings.heading | escape }}"
        class="iwt-image"
        loading="lazy"
        width="800"
        height="{{ 800 | divided_by: section.settings.image.aspect_ratio | round }}"
      >
    {%- else -%}
      {{ 'image' | placeholder_svg_tag: 'iwt-image' }}
    {%- endif -%}
  </div>
  
  <div class="iwt-content" style="text-align: {{ section.settings.text_align }}; align-items: {% if section.settings.text_align == 'center' %}center{% else %}flex-start{% endif %};">
    {%- if section.settings.subheading != blank -%}
      <div class="iwt-subtitle">{{ section.settings.subheading }}</div>
    {%- endif -%}
    
    {%- if section.settings.heading != blank -%}
      <h2 class="iwt-title">{{ section.settings.heading }}</h2>
    {%- endif -%}
    
    {%- if section.settings.text != blank -%}
      <div class="iwt-text">{{ section.settings.text }}</div>
    {%- endif -%}
    
    {%- if section.settings.button_label != blank and section.settings.button_link != blank -%}
      <a href="{{ section.settings.button_link }}" class="iwt-btn">
        {{ section.settings.button_label }}
      </a>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Image with text",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Image Position",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Our Story"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Handcrafted with Love"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Content",
      "default": "Each piece in our collection is crafted by skilled artisans using traditional techniques passed down through generations."
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "Text Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" }
      ],
      "default": "left"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Read More"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Image with text"
    }
  ]
}
{% endschema %}
