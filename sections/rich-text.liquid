{%- comment -%}
  AONA - Rich Text
  Simple centered text block
{%- endcomment -%}

<style>
  .rich-text-section {
    padding: 60px 24px;
    background: white;
    text-align: center;
  }
  .rich-text-container {
    max-width: 800px;
    margin: 0 auto;
  }
  .rich-heading {
    font-family: 'Playfair Display', serif;
    font-size: 28px;
    color: var(--color-royal-red, #880015);
    margin-bottom: 20px;
  }
  .rich-text {
    line-height: 1.8;
    color: #444;
    font-size: 16px;
  }
</style>

<div class="rich-text-section" style="background: {{ section.settings.bg_color }};">
  <div class="rich-text-container">
    {%- if section.settings.heading != blank -%}
      <h2 class="rich-heading">{{ section.settings.heading }}</h2>
    {%- endif -%}
    {%- if section.settings.text != blank -%}
      <div class="rich-text">{{ section.settings.text }}</div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Rich Text",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to Aona"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Share information about your brand with your customers.</p>"
    }
  ],
  "presets": [
    {
      "name": "Rich Text"
    }
  ]
}
{% endschema %}
