{%- comment -%}
  Promotional Banners Grid - Responsive grid using theme tokens
{%- endcomment -%}

<section class="promo-banners section-padding">
  <div class="h-section-header">
     <h2 class="h-section-title">{{ section.settings.title | default: "Featured" }}</h2>
  </div>
  
  <div class="container">
    <div class="promo-banners__grid">
      {% for block in section.blocks %}
        <a href="{{ block.settings.link }}" class="promo-banner" style="background-color: {{ block.settings.background_color }}" {{ block.shopify_attributes }}>
          {% if block.settings.image %}
            <img src="{{ block.settings.image | image_url: width: 600 }}" alt="{{ block.settings.title | escape }}" class="promo-banner__image" loading="lazy">
          {% endif %}
          <div class="promo-banner__content">
            <h3 class="promo-banner__title">{{ block.settings.title }}</h3>
            {% if block.settings.subtitle != blank %}
              <p class="promo-banner__subtitle">{{ block.settings.subtitle }}</p>
            {% endif %}
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .promo-banners {
    padding: 20px 0;
    background: var(--color-bg-white);
  }
  
  .promo-banners__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
    padding: 0 16px;
  }
  
  .promo-banner {
    position: relative;
    aspect-ratio: 1;
    border-radius: 12px;
    overflow: hidden;
    text-decoration: none;
    display: flex;
    align-items: flex-end;
    padding: 16px;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    box-shadow: var(--shadow-card);
  }
  
  .promo-banner:active {
    transform: scale(0.98);
  }
  
  .promo-banner__image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .promo-banner:hover .promo-banner__image {
    transform: scale(1.05);
  }
  
  .promo-banner__content {
    position: relative;
    z-index: 1;
    width: 100%;
  }
  
  .promo-banner__title {
    font-family: var(--font-heading);
    font-size: 16px;
    font-weight: 600;
    color: white;
    text-shadow: 0 2px 4px rgba(0,0,0,0.5);
    margin: 0;
    line-height: 1.2;
  }
  
  .promo-banner__subtitle {
    font-size: 12px;
    color: rgba(255,255,255,0.9);
    text-shadow: 0 1px 2px rgba(0,0,0,0.5);
    margin-top: 4px;
  }
  
  @media (min-width: 768px) {
    .promo-banners__grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 16px;
    }
    .promo-banner__title {
      font-size: 20px;
    }
    .promo-banner__subtitle {
      font-size: 14px;
    }
    .promo-banner:hover {
      box-shadow: 0 8px 24px rgba(0,0,0,0.15);
    }
  }
</style>

