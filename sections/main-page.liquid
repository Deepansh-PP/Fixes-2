{%- comment -%}
  AONA INDIA - Main Page Section
  Handles different page types including Express Delivery and New Arrivals
{%- endcomment -%}

{%- liquid
  assign page_handle = page.handle | downcase
  assign is_express = false
  assign is_new = false
  
  if page_handle contains 'express' or page_handle contains '30-min' or page_handle contains 'delivery'
    assign is_express = true
  endif
  
  if page_handle contains 'new' or page_handle contains 'arrival' or page_handle contains 'latest'
    assign is_new = true
  endif
-%}

{%- if is_express -%}
  {%- render 'page-express-delivery' -%}
{%- elsif is_new -%}
  {%- render 'page-new-arrivals' -%}
{%- else -%}
  <!-- Default Page Content -->
  <div class="page-content">
    <div class="page-header">
      <h1 class="page-title">{{ page.title }}</h1>
    </div>
    <div class="page-body">
      {{ page.content }}
    </div>
  </div>
  
  <style>
    .page-content {
      padding: 20px 16px;
      padding-bottom: 100px;
    }
    .page-header {
      margin-bottom: 24px;
    }
    .page-title {
      font-family: var(--font-heading);
      font-size: 28px;
      font-weight: 600;
      color: var(--color-text);
    }
    .page-body {
      font-size: 15px;
      line-height: 1.7;
      color: var(--color-text-muted);
    }
    .page-body h2, .page-body h3, .page-body h4 {
      font-family: var(--font-heading);
      color: var(--color-text);
      margin: 24px 0 12px;
    }
    .page-body p {
      margin-bottom: 16px;
    }
    .page-body ul, .page-body ol {
      margin: 16px 0;
      padding-left: 24px;
    }
    .page-body li {
      margin-bottom: 8px;
    }
  </style>
{%- endif -%}

{% schema %}
{
  "name": "Main Page",
  "tag": "section",
  "class": "section-main-page"
}
{% endschema %}
