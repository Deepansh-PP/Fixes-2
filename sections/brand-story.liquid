{% comment %}
  AONA Brand Story Section - Premium Responsive Layout
  Mobile: Stacked (Image top, Text bottom)
  PC: Side-by-Side (Image Left, Text Right) with elegant spacing.
{% endcomment %}

<section class="brand-story-section">
  <div class="story-container">
    
    <!-- LEFT: Image Column -->
    <div class="story-image-col">
      <div class="story-image-wrapper">
        {% if section.settings.image != blank %}
          <img src="{{ section.settings.image | image_url: width: 800 }}" alt="{{ section.settings.heading }}" class="story-image" loading="lazy">
        {% else %}
          {{ 'lifestyle-1' | placeholder_svg_tag: 'story-image placeholder-img' }}
        {% endif %}
        {% if section.settings.badge != blank %}
          <span class="story-badge">{{ section.settings.badge }}</span>
        {% endif %}
      </div>
    </div>

    <!-- RIGHT: Text Column -->
    <div class="story-text-col">
      <div class="story-content">
        <h2 class="story-heading">
          {{ section.settings.heading | default: "Crafted with Passion," }}<br>
          <span class="story-heading-accent">{{ section.settings.heading_accent | default: "Made with Soul" }}</span>
        </h2>
        
        <div class="story-text">
          {{ section.settings.text | default: "Every piece in our collection tells a story of generations of skilled artisans who pour their heart into creating timeless masterpieces. From the bustling workshops of Moradabad to your living room, each item carries the warmth of human touch." }}
        </div>

        <div class="story-features">
          <div class="feature-item">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
              <polyline points="22 4 12 14.01 9 11.01"></polyline>
            </svg>
            <span>{{ section.settings.feature_1 | default: "100% Authentic" }}</span>
          </div>
          <div class="feature-item">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
              <line x1="3" y1="9" x2="21" y2="9"></line>
              <line x1="9" y1="21" x2="9" y2="9"></line>
            </svg>
            <span>{{ section.settings.feature_2 | default: "Certified Art" }}</span>
          </div>
          <div class="feature-item">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"></circle>
              <path d="M2 12h20M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
            </svg>
            <span>{{ section.settings.feature_3 | default: "Global Shipping" }}</span>
          </div>
        </div>

        <a href="{{ section.settings.button_link | default: '/pages/about' }}" class="story-button">
          {{ section.settings.button_text | default: "READ OUR STORY" }}
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
        </a>
      </div>
    </div>
    
  </div>
</section>

<style>
/* 1. Global Section Styles */
.brand-story-section {
  padding: 40px 16px;
  background: #FFF5F5; /* Very subtle pink/red tint */
}

.story-container {
  max-width: 1400px;
  margin: 0 auto;
  display: flex;
  flex-direction: column; /* Stacked on mobile by default */
  gap: 30px;
}

/* 2. Image Column */
.story-image-col {
  width: 100%;
}

.story-image-wrapper {
  position: relative;
  border: 2px dashed #D4AF37; /* Gold Dash */
  border-radius: 16px;
  padding: 16px;
  background: white;
}

.story-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
  border-radius: 8px;
  aspect-ratio: 4 / 3; /* Ensures it never stretches weirdly */
}

.placeholder-img {
  background: #f0f0f0;
}

.story-badge {
  position: absolute;
  top: 30px;
  left: 30px;
  background: #D4AF37;
  color: white;
  padding: 8px 16px;
  border-radius: 20px;
  font-size: 11px;
  font-weight: 700;
  letter-spacing: 1px;
  box-shadow: 0 4px 10px rgba(212, 175, 55, 0.3);
}

/* 3. Text Column */
.story-text-col {
  width: 100%;
  display: flex;
  align-items: center;
}

.story-content {
  text-align: left;
}

.story-heading {
  font-family: 'Playfair Display', serif;
  font-size: 28px;
  color: #1A1A1A;
  margin-bottom: 16px;
  line-height: 1.3;
}

.story-heading-accent {
  color: #880015; /* Aona Red */
}

.story-text {
  font-size: 14px;
  line-height: 1.7;
  color: #555;
  margin-bottom: 24px;
}

.story-features {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
  margin-bottom: 30px;
}

.feature-item {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 13px;
  font-weight: 600;
  color: #1A1A1A;
}

.feature-item svg {
  color: #880015;
  flex-shrink: 0;
}

/* 4. Button */
.story-button {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 14px 28px;
  background: white;
  border: 2px solid #880015;
  color: #880015;
  font-size: 13px;
  font-weight: 700;
  letter-spacing: 1px;
  border-radius: 4px;
  text-decoration: none;
  transition: all 0.3s ease;
}

.story-button:hover {
  background: #880015;
  color: white;
}

.story-button svg {
  transition: transform 0.2s ease;
}

.story-button:hover svg {
  transform: translateX(5px);
}

/* =========================================
   5. DESKTOP OPTIMIZATIONS (The Fix)
   ========================================= */
@media (min-width: 992px) {
  .brand-story-section {
    padding: 80px 40px; /* Bigger breathing room */
  }

  .story-container {
    flex-direction: row; /* Puts image and text side-by-side */
    align-items: center;
    gap: 60px; /* Space between the two columns */
  }

  .story-image-col {
    flex: 1; /* Takes exactly 50% of the space */
  }

  .story-text-col {
    flex: 1; /* Takes exactly 50% of the space */
    padding-right: 40px; /* Prevents text from hitting the edge of screen */
  }

  /* Scale up typography for big monitors */
  .story-heading {
    font-size: 42px;
    margin-bottom: 24px;
  }

  .story-text {
    font-size: 16px;
    margin-bottom: 32px;
  }

  .story-features {
    gap: 30px;
    margin-bottom: 40px;
  }

  .feature-item {
    font-size: 15px;
  }
}
</style>

{% schema %}
{
  "name": "Brand Story",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "badge",
      "label": "Badge Text",
      "default": "SINCE 1985"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Crafted with Passion,"
    },
    {
      "type": "text",
      "id": "heading_accent",
      "label": "Heading Accent",
      "default": "Made with Soul"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Description",
      "default": "Every piece in our collection tells a story of generations of skilled artisans who pour their heart into creating timeless masterpieces. From the bustling workshops of Moradabad to your living room, each item carries the warmth of human touch."
    },
    {
      "type": "text",
      "id": "feature_1",
      "label": "Feature 1",
      "default": "100% Authentic"
    },
    {
      "type": "text",
      "id": "feature_2",
      "label": "Feature 2",
      "default": "Certificate"
    },
    {
      "type": "text",
      "id": "feature_3",
      "label": "Feature 3",
      "default": "Global Shipping"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "READ OUR STORY"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Brand Story"
    }
  ]
}
{% endschema %}