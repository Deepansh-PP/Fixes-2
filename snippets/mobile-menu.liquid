{%- comment -%}
  AONA INDIA - Mobile Menu Drawer
  Slide-in menu from the left with:
  - User greeting header
  - Navigation links
  - Secondary links (Help, Store Locator)
{%- endcomment -%}

<div class="mobile-menu" id="mobileMenu" data-mobile-menu>
  <!-- Menu Header -->
  <div class="mobile-menu-header">
    <div class="flex items-center gap-3">
      <div style="width: 48px; height: 48px; border-radius: 50%; background: rgba(255,255,255,0.2); display: flex; align-items: center; justify-content: center;">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
          <path d="M20 21v-2a4 4 0 00-4-4H8a4 4 0 00-4 4v2"/>
          <circle cx="12" cy="7" r="4"/>
        </svg>
      </div>
      <div>
        {%- if customer -%}
          <p class="font-semibold">Hello, {{ customer.first_name }}</p>
          <a href="{{ routes.account_url }}" class="text-sm" style="opacity: 0.8; text-decoration: underline;">View Profile</a>
        {%- else -%}
          <p class="font-semibold">Hello, Guest</p>
          <a href="{{ routes.account_login_url }}" class="text-sm" style="opacity: 0.8; text-decoration: underline;">Login / Signup</a>
        {%- endif -%}
      </div>
    </div>

    <!-- Close Button -->
    <button 
      style="position: absolute; top: 12px; right: 12px; padding: 4px; opacity: 0.8;" 
      data-menu-close
      aria-label="Close menu"
    >
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="18" y1="6" x2="6" y2="18"/>
        <line x1="6" y1="6" x2="18" y2="18"/>
      </svg>
    </button>
  </div>

  <!-- Main Navigation -->
  <div class="py-2">
    <a href="{{ routes.root_url }}" class="mobile-menu-item">
      <span>Home</span>
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="var(--color-text-muted)" stroke-width="2">
        <polyline points="9 18 15 12 9 6"/>
      </svg>
    </a>
    
    <a href="{{ routes.all_products_collection_url }}" class="mobile-menu-item">
      <span>All Collections</span>
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="var(--color-text-muted)" stroke-width="2">
        <polyline points="9 18 15 12 9 6"/>
      </svg>
    </a>

    {%- for link in linklists.main-menu.links -%}
      <a href="{{ link.url }}" class="mobile-menu-item">
        <span>{{ link.title }}</span>
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="var(--color-text-muted)" stroke-width="2">
          <polyline points="9 18 15 12 9 6"/>
        </svg>
      </a>
    {%- endfor -%}

    <!-- Sale Link with Highlight -->
    <a href="/collections/sale" class="mobile-menu-item" style="color: var(--color-royal-red);">
      <span class="font-semibold">Sale</span>
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="var(--color-royal-red)" stroke-width="2">
        <polyline points="9 18 15 12 9 6"/>
      </svg>
    </a>
  </div>

  <!-- Divider -->
  <div class="divider"></div>

  <!-- Secondary Links -->
  <div class="py-2">
    <a href="/pages/contact" class="mobile-menu-item" style="color: var(--color-text-secondary);">
      <div class="flex items-center gap-3">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"/>
          <path d="M9.09 9a3 3 0 015.83 1c0 2-3 3-3 3"/>
          <line x1="12" y1="17" x2="12.01" y2="17"/>
        </svg>
        <span>Help Center</span>
      </div>
    </a>
    
    <a href="/pages/store-locator" class="mobile-menu-item" style="color: var(--color-text-secondary);">
      <div class="flex items-center gap-3">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0118 0z"/>
          <circle cx="12" cy="10" r="3"/>
        </svg>
        <span>Store Locator</span>
      </div>
    </a>
  </div>

  <!-- Divider -->
  <div class="divider"></div>

  <!-- Contact Info -->
  <div class="p-4">
    <p class="text-xs text-muted uppercase tracking-wider mb-2">Contact Us</p>
    {%- if settings.social_whatsapp != blank -%}
      <a href="https://wa.me/{{ settings.social_whatsapp }}" class="flex items-center gap-2 text-sm text-secondary py-2">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="var(--color-success)">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
        </svg>
        <span>WhatsApp Support</span>
      </a>
    {%- endif -%}
  </div>
</div>
