{% comment %}
  Login Links Snippet
  Renders login/logout links for header and navigation
{% endcomment %}

{% if customer %}
  {%- comment -%} Customer is logged in {%- endcomment -%}
  <div class="login-links login-links--logged-in">
    <a href="{{ routes.account_url }}" class="login-link login-link--account" aria-label="My Account">
      <span class="login-link-avatar">
        {{ customer.first_name | slice: 0 }}
      </span>
      <span class="login-link-text">{{ customer.first_name }}</span>
    </a>
    <a href="{{ routes.account_logout_url }}" class="login-link login-link--logout" aria-label="Logout">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/>
        <polyline points="16 17 21 12 16 7"/>
        <line x1="21" y1="12" x2="9" y2="12"/>
      </svg>
    </a>
  </div>
{% else %}
  {%- comment -%} Customer is not logged in {%- endcomment -%}
  <div class="login-links login-links--logged-out">
    <a href="{{ routes.account_login_url }}" class="login-link login-link--login" aria-label="Login">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
        <circle cx="12" cy="7" r="4"/>
      </svg>
      <span class="login-link-text">Login</span>
    </a>
  </div>
{% endif %}

<style>
  .login-links {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .login-link {
    display: flex;
    align-items: center;
    gap: 6px;
    text-decoration: none;
    color: var(--black, #1A1A1A);
    font-size: 14px;
    font-weight: 500;
    padding: 8px 12px;
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .login-link:hover {
    background: rgba(169, 29, 29, 0.05);
    color: var(--crimson-primary, #A91D1D);
  }

  .login-link-avatar {
    width: 32px;
    height: 32px;
    background: linear-gradient(135deg, #A91D1D, #880015);
    color: #fff;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: 14px;
    text-transform: uppercase;
  }

  .login-link--logout {
    padding: 8px;
    color: #666;
  }

  .login-link--logout:hover {
    color: #dc3545;
    background: rgba(220, 53, 69, 0.05);
  }

  .login-link-text {
    display: none;
  }

  @media (min-width: 768px) {
    .login-link-text {
      display: inline;
    }
  }
</style>
